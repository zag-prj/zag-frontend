<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="css\MainPage.css">
</head>

<body>
    <div class="container">
        <!-- Sidebar -->
        <!-- include sidebar.ejs-->
        <%- include('layout/sidebar.ejs') %>

            <!-- Main Content -->
            <main class="main-content">
                <div class="status-cards">
                    <!-- Customer Satisfaction Card -->
                    <div class="status-card">
                        <h3>Customer Satisfaction</h3>
                        <div class="status-content">
                            <img src="images\v11_1785.png" alt="Smiley Face" class="status-icon">
                            <p>98%</p>
                        </div>
                    </div>

                    <!-- Upcoming Appointments -->
                    <div class="status-card">
                        <h3>Upcoming Appointments</h3>
                        <div class="status-content">
                            <img src="images\v11_2071.png" alt="Appointments" class="status-icon">
                        </div>
                    </div>

                    <!-- Performance Card -->
                    <div class="status-card">
                        <h3>Performance</h3>
                        <div class="status-content">
                            <img src="images\v11_2075.png" alt="Performance" class="graph-icon">
                            <p>Resolved issues: 75</p>
                            <p>Outstanding: 16</p>
                            <p>Unhappy Clients: 1</p>
                        </div>
                    </div>
                </div>

                <!-- Today's Scheduled Maintenance -->
                <section class="scheduled-maintenance">
                    <h3>Today's Scheduled Maintenance</h3>
                    <table class="maintenance-table">
                        <thead>
                            <tr>
                                <th>Service ID</th>
                                <th>Client</th>
                                <th>Service Type</th>
                                <th>Time</th>
                                <th>Status</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Example row -->
                            <tr>
                                <td><input type="text" value="12345"></td>
                                <td><input type="text" value="John Doe"></td>
                                <td><input type="text" value="Plumbing"></td>
                                <td><input type="text" value="10:00 AM"></td>
                                <td><input type="text" value="Pending"></td>
                                <td><input type="text" value=""></td>
                            </tr>
                            <!-- Additional rows can be added similarly -->
                        </tbody>
                    </table>
                </section>

                <!-- Recent Clients -->
                <section class="recent-clients">
                    <h3>Recent Clients</h3>
                    <table class="clients-table">
                        <thead>
                            <tr>
                                <th>Client Name</th>
                                <th>Service Type</th>
                                <th>Amount Due</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Example row -->
                            <tr>
                                <td>John Doe</td>
                                <td>Repair</td>
                                <td>R14027.43</td>
                                <td>In Progress</td>
                            </tr>
                            <tr>
                                <td>BnB's</td>
                                <td>Repair</td>
                                <td>R6032.38</td>
                                <td>In Progress</td>
                            </tr>
                        </tbody>
                    </table>
                </section>
            </main>
    </div>
</body>

</html>