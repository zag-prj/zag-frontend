<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="css/Job.css">
</head>

<body>
    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <!-- Company Logo -->
            <div class="company-logo">
                <img src="images/v25_2235.png" alt="Company Logo">
            </div>

            <!-- User Profile -->
            <div class="user-profile">
                <img src="images/v25_2233.png" alt="User Icon" class="user-icon">
                <h3>User</h3>
            </div>

            <!-- navigate -->
            <script>
                function navigateTo(page) {
                    window.location.href = page;
                }
            </script>
            <!-- Sidebar buttons -->
            <div class="menu">
                <button class="menu-btn" onclick="navigateTo('MainEmp.html')">Main</button>
                <button class="menu-btn" onclick="navigateTo('JobAssignment.html')">Task Assignment</button>
                <button class="menu-btn" onclick="navigateTo('CurrentClients.html')">Current Clients</button>
                <button class="menu-btn" onclick="navigateTo('MaintenanceSched.html')">Maintenance Schedule</button>
                <button class="menu-btn" onclick="navigateTo('ServiceReq.html')">Service Request</button>
                <button class="menu-btn" onclick="navigateTo('ScheduledJobs.html')">Scheduled Jobs</button>
            </div>
            <!-- Log out Button -->
            <button class="logout-btn" onclick="navigateTo('routes/login.ejs')">Log out</button>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <h2>Task Assignment</h2>
            <table class="task-assignment-table">
                <thead>
                    <tr>
                        <th>Task ID</th>
                        <th>Assigned To</th>
                        <th>Task Description</th>
                        <th>Due Date</th>
                        <th>Status</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < 5; i++) { %> <!-- Adjust the number as needed -->
                        <tr>
                            <td><input type="text" class="table-input" placeholder="Task ID"></td>
                            <td><input type="text" class="table-input" placeholder="Assigned To"></td>
                            <td><input type="text" class="table-input" placeholder="Task Description"></td>
                            <td><input type="text" class="table-input" placeholder="Due Date"></td>
                            <td><input type="text" class="table-input" placeholder="Status"></td>
                            <td><input type="text" class="table-input" placeholder="Notes"></td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function logout() {
            // Handle logout functionality here
            alert('Logging out...');
            // Redirect to login page or handle session termination
            window.location.href = 'login.html'; // Example redirect
        }
    </script>
</body>

</html>